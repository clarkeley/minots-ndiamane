        <div class="row">
            <div class="col-sm-12 page-block">
                <div class="row menu-sm justify-content-end">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <h1 class="d-4 font-title">{{ album.title }}</h1>

                <div class="font-txt d-3">
                    <p>{{ album.caption }}</p>
                </div>

                <div class="">
                    {% for picture in album.picture %}
                       {# <img src="{{ vich_uploader_asset(picture, 'image' | imagine_filter('album_thumb')) }}" alt="{{ picture.imageName }}">#}
                    {% endfor %}
                </div>

                <footer class="b-1"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>
        </div>
    </div>
{% endblock %}