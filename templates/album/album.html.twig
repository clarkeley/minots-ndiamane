{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-6 img-split p-0 album">
            </div>

            <div class="col-sm-6 page-block">
                <div class="menu-sm">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <h1 class="d-4 font-title">Album</h1>

                <div class="font-txt d-3">
                    <p>Chaque voyage au village de Ndiamane apporte son lot de photos<br><br>
                        Revivez ces moments <span class="bold">inoubliables</span> avec nous
                    </p>

                </div>

                <div class="">
                    {% for album in album %}
                        <a href="{{ path('album_show', {'id': album.id}) }}" class="btn btn-lg btn-album" role="button">
                            {{ album }}
                        </a>

                        <p class="bold font-txt">
                            {{ album.date|date('d/m/Y') }}
                        </p>
                    {% endfor %}
                </div>

                <footer class="b-1"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>
        </div>
    </div>
{% endblock %}