{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-6 page-block">
                <div class="menu-background menu-op">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <h1 class="d-5 font-title">Agenda</h1>

                {#Events#}
                <div class="d-3">

                </div>

                <div class="row">
                    {% for show in eventShow %}
                        <div class="col-sm-12">
                            <p>{{ show.title }}</p>
                            <a href="{{ path('agenda_show', {'id': show.id}) }}" class="btn btn-lg btn-album" role="button">
                                lire la suite
                            </a>
                        </div>
                    {% endfor %}
                </div>


                <footer class="footer-black d-3"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>

            <div class="col-sm-6 img-split p-0 event">
                <div class="menu-background">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <footer class="d-10 footer"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>
        </div>
    </div>
{% endblock %}