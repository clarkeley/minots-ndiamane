{% extends 'base.html.twig' %}

{% block title %}Agenda{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-6 page-block">
                <div class="menu-background menu-op">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <h1 class="d-5 font-title">Agenda</h1>

                {#Events#}
                {% for event in events %}
                    {% if loop.first %}
                        <div class="d-4 b-2">
                            <div class="row justify-content-center d-2">
                                <img src="{{ vich_uploader_asset(event, 'imageFile') | imagine_filter('event_show') }}" alt="{{ event.imageName }}">
                            </div>

                            <p class="font-txt d-3"><span class="bold">{{ event.title }}</span> {{ event.date|date('d/m/Y') }}</p>

                            <p class="font-txt d-3">
                                {{ event.event }}
                            </p>

                            {% for tag in event.tags %}
                                <span class="badge badge-success tags">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endfor %}

                <a href="{{ path('agenda_archives') }}" class="btn btn-lg btn-album d-4" role="button">
                    Nos archives ici
                </a>

                <footer class="footer-black d-3"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>

            <div class="col-sm-6 img-split p-0 event">
                <div class="menu-background">
                    {% include 'menu/menu.html.twig' %}
                </div>

                <footer class="d-100 footer"> Les Minots de Ndiamane &copy; 2019</footer>
            </div>
        </div>
    </div>
{% endblock %}